package vowelMethod;

public class vowelMethod {
	
	public static int vowel(String text) {
		//GİRİLEN METİNDE KAÇ TANE SESLİ HARF OLDUĞUNU VEREN KOD
		int counter = 0;
		for(int i = 0; i < text.length(); i++) {
			switch(text.charAt(i)) {
			case 'a' : counter++;
			break;
			
			case 'e' : counter++;
			break;
			
			case 'i' : counter++;
			break;
			
			case 'o' : counter++;
			break;
			
			case 'u' : counter++;
			break;
			
			case 'A' : counter++;
			break;
			
			case 'E' : counter++;
			break;
			
			case 'I' : counter++;
			break;
			
			case 'O' : counter++;
			break;
			
			case 'U' : counter++;
			break;
			}
		}
		
		return counter;
	}

	public static void main(String[] args) {
		String text = "We write the code that tells the number of vowels in the entered sentence";
		System.out.println("Number of vowels: " + vowel(text));
	}

}
